<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="fasesContainer" spacing="10" style="-fx-background-color: #2a2a2a;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uce.insight.ui.project.FasesController">
    <Label text="Fases del Proyecto" textFill="WHITE">
        <font>
            <Font name="Arial Bold" size="18.0" />
        </font>
    </Label>

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
        <content>
            <VBox fx:id="fasesList" spacing="10" style="-fx-background-color: #2a2a2a;"/>
        </content>
    </ScrollPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="addFaseBtn" mnemonicParsing="false" onAction="#handleAddFase" text="Agregar Fase" />
    </HBox>
</VBox>